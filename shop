<script>
// Tracks the current position of each carousel
const carouselIndices = {};

// Initialize each carousel
document.querySelectorAll('.carousel').forEach(carousel => {
    const id = carousel.id;
    carouselIndices[id] = 0;
});

function showSlide(carouselId, itemsPerSlide) {
    const carousel = document.getElementById(carouselId);
    const totalItems = carousel.querySelectorAll('.carousel-item').length;

    // Ensure the index wraps around
    const maxIndex = Math.ceil(totalItems / itemsPerSlide) - 1;
    if (carouselIndices[carouselId] > maxIndex) {
        carouselIndices[carouselId] = 0; // Reset to first slide
    } else if (carouselIndices[carouselId] < 0) {
        carouselIndices[carouselId] = maxIndex; // Go to last slide
    }

    const offset = -carouselIndices[carouselId] * 100; // Slide width is 100%
    carousel.style.transform = `translateX(${offset}%)`;
}

function nextSlide(carouselId, itemsPerSlide) {
    carouselIndices[carouselId]++;
    showSlide(carouselId, itemsPerSlide);
}

function prevSlide(carouselId, itemsPerSlide) {
    carouselIndices[carouselId]--;
    showSlide(carouselId, itemsPerSlide);
}

// Initialize slides
document.querySelectorAll('.carousel').forEach(carousel => {
    const id = carousel.id;
    showSlide(id, 3); // Set to 3 items per slide
});

</script>



