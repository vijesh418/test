    <script>
        // Fetch the cart data from the server and update the cart
        $(document).ready(function() {
            $.get("/get-cart", function(data) {
                if (data.loggedIn) {
                    updateCart(data.cart);
                } else {
                    alert("Please log in to view your cart.");
                    window.location.href = "/login";
                }
            });

            // Update the cart table and calculate the total
            function updateCart(cart) {
                let total = 0;
                $('#cart-items').empty();

                cart.forEach(item => {
                    const totalPrice = item.price * item.quantity;
                    total += totalPrice;

                    const cartRow = `
                        <tr data-id="${item.id}">
                            <td>
                                <img src="${item.image_url}" alt="Product Image">
                                <span class="cart-item-name">${item.name}</span>
                            </td>
                            <td>$${item.price}</td>
                            <td>
                                <input type="number" value="${item.quantity}" min="1" max="10" class="quantity" data-id="${item.id}">
                            </td>
                            <td>$${totalPrice.toFixed(2)}</td>
                            <td><button class="remove-item" data-id="${item.id}">Remove</button></td>
                        </tr>
                    `;
                    $('#cart-items').append(cartRow);
                });

                $('#total-price').text(`$${total.toFixed(2)}`);
            }

            // Update quantity and recalculate the total
            $('#cart-items').on('change', '.quantity', function() {
                const id = $(this).data('id');
                const quantity = $(this).val();

                // Send updated quantity to server
                $.post('/update-cart', { id, quantity }, function(data) {
                    updateCart(data.cart);
                });
            });

            // Remove item from cart
            $('#cart-items').on('click', '.remove-item', function() {
                const id = $(this).data('id');

                // Remove item from cart on the server
                $.post('/remove-from-cart', { id }, function(data) {
                    updateCart(data.cart);
                });
            });
        });
    </script>
